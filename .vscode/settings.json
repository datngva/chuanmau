{
    "css.customData": ["./vscode.tailwind.json"],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "astro", // Enable .astro
        "typescript", // Enable .ts
        "typescriptreact" // Enable .tsx
    ],
    "files.associations": {
        "*.mdx": "markdown"
    },
    "prettier.documentSelectors": ["**/*.astro"],
    "[astro]": {
        "editor.formatOnSave": "true",
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
